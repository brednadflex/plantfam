  <%# new_profile_review %>
   <%# /profiles/:profile_id/reviews/new %>

<%= simple_form_for([@booking, @review]) do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.input :recommended, as: :radio_buttons, collection: [[true, 'yes'], [false, 'no']], label_method: :second, value_method: :first %>
  <%= f.input :profile_id, as: :hidden, input_html: { value: current_user == @booking.client ? @booking.provider.profile.id : @booking.client.profile.id } %>
  <%= f.submit %>
<% end %>