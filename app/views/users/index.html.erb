  <div class="fixed-top top-block">
    <div class="new-message-header">
      <div class="back-icon">
        <%= link_to chat_rooms_path, class: "text-decoration-none text-reset" do %>
        <i class="fas fa-arrow-circle-left pl-2"></i>
        <% end %>
      </div>
      <div class="new-msg-text-centered">
        <h3>New Message</h3>
      </div>
    </div>
    <div>
      <%= form_tag users_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Search for a conversation"
      %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <div class="contact-results">
    <% @profiles.each do |profile| %>
      <%= link_to user_chat_rooms_path(profile), class: "text-decoration-none text-reset", method: :post do %>
      <div class="contacts-with-avatar">
        <div class="contacts-avatar">
          <%= image_tag profile.profile_img %>
        </div>
        <div class="contacts-name">
          <h6><%= profile.first_name %> <%= profile.last_name %></h6>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
