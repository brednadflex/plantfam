<h1>Create a new booking</h1>
<% if @profile.sitter? && @profile.advisor? %>
  <% options = ["sitting", "advise"] %>
<% elsif @profile.sitter? %>
  <% options = ["sitting"] %>
<% elsif @profile.advisor? %>
  <% options = ["advise"] %>
<% end %>

<%= simple_form_for([@profile, @booking]) do |f| %>
  <%= f.input :service_type, collection: options %>
  <%= f.input :start_date, as: :date, html5: true %>
  <%= f.input :end_date, as: :date, html5: true %>
  <%= f.input :comment, label: "Send a message" %>
  <%= f.submit %>
<% end %>
