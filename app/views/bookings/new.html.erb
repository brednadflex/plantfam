<div class="main-wrapper">

<% if @profile.sitter? && @profile.advisor? %>
  <% options = ["Plant Sitting", "Advice"] %>
<% elsif @profile.sitter? %>
  <% options = ["Plant Sitting"] %>
<% elsif @profile.advisor? %>
  <% options = ["Advice"] %>
<% end %>

<div class="booking-form-container">
  <h3>Send <%= @profile.first_name %> a request</h3>
  <%= simple_form_for([@profile, @booking]) do |f| %>
    <div class="form-input-container">
      <%= f.input :service_type, collection: options, html5: true, input_html: {value: "Plant Sitting"} %>
    </div>
    <div class="form-input-container">
      <%= f.input :my_address, id: "address_input", as: :string, html5: true, input_html: {value: session[:search]["address"]} %>
    </div>
    <div class="search-form-container">
      <%= f.input :start_date, as: :string, required: true, input_html: {class: "datepicker", id: "range_start", value: session[:search]["from"]} %>
      <%= f.input :end_date, as: :string, required: true, input_html: {class: "datepicker", id: "range_start", value: session[:search]["to"]} %>
    </div>
    <%= f.input :comment, label: "Tell #{Profile.find(params[:profile_id]).first_name} more about your plants" %>
    <%= f.submit class: "btn submit-button" %>
  <% end %>
</div>
</div>
