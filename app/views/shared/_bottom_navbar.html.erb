<div class="bottom-navbar fixed-bottom">
  <div class="nav-icon">
    <%= link_to root_path do %>
    <%= image_tag "NAVBARICONS/home.png" %>
    <% end %>
  </div>
  <div class="nav-icon">
    <%= link_to posts_path do %>
    <%= image_tag "NAVBARICONS/feed.png" %>
    <% end %>
  </div>
  <div class="nav-icon">
    <%= link_to "#" do %>
    <%= image_tag "NAVBARICONS/create.png" %>
    <% end %>
  </div>
  <div class="nav-icon chat-notification-container">
    <%= link_to chat_rooms_path do %>
    <%= image_tag "NAVBARICONS/mail.png" %>
    <% end %>
    <% if current_user && @notifications.length > 0 %>
      <div class="chat-notification chat-notification-navbar">
          <p class="chat-notification-number"><%= @notifications.length %></p>
      </div>
    <% end %>
  </div>
  <div class="nav-icon nav-item dropup">
    <% if user_signed_in? %>
      <%= image_tag "NAVBARICONS/profile.png", class: "signed-in dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <div class="dropdown-menu dropdown-menu-right green-bord-dropdown" aria-labelledby="navbarDropdown">
            <%= link_to "my profile", my_profile_path, class: "dropdown-item" %>
            <%= link_to "my bookings", my_bookings_path(current_user.profile.id), class: "dropdown-item" %>
            <%= link_to "edit profile", edit_profile_path(current_user.profile), class: "dropdown-item" %>
            <%= link_to "log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      </div>
    <% else %>
      <%= link_to new_user_session_path do %>
      <%= image_tag "NAVBARICONS/profile.png", class: "signed-out" %>
      <% end %>
    <% end %>
  </div>
</div>
