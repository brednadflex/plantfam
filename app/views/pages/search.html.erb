<div class="container">
  <h1>Search for a Plantsitter</h1>

  <%= form_tag profiles_path, method: :get do %>
    <%= check_box_tag "experience", "Plant Whisperer" %>
    <%= label_tag :plant_whisperer %> <br>

    <%= label_tag :from %>
    <%= date_field_tag :from %>
    <%= label_tag :to %>
     <%= date_field_tag :to %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
</div>


<% Availability.where("start_date >= ?", "2021-07-01").where("end_date <= ?", "2021-07-30").each do |availability| %>
  <li><%= Profile.find(availability.profile_id).user.email %></li>
<% end %>

