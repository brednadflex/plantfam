<div class="container">
  <h1 class="search-header">Find a Plant Sitter</h1>

  <%= form_tag profiles_path, method: :get do %>
    <div class="search-by-address">
      <p class="form-label">Where are your plants?</p>
      <%= text_field_tag :address, "", id: "address_input", placeholder: "Type in your address..." %>
    </div>
    <div class="search-by-date">
      <p class="form-label">When will you need help with your plants?</p>
      <%= label_tag :from %>
      <%= date_field_tag :from, id: "start-date" %> <br> <br>
      <%= label_tag :to %>
      <%= date_field_tag :to, id: "end-date" %>
    </div>
    <%= submit_tag "Find available Plant Sitters", class: "btn-sea-green search-sitter-button" %>
  <% end %>
</div>
