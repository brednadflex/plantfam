<div class="container">
  <h1>Search for a Plantsitter</h1>

  <%= form_tag profiles_path, method: :get do %>
    <%= label_tag "Your address" %>
    <%= text_field_tag :address, "", id: "address_input", placeholder: "Where are your plants?" %>
    <%= label_tag :from %>
    <%= date_field_tag :from %>
    <%= label_tag :to %>
    <%= date_field_tag :to %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>
