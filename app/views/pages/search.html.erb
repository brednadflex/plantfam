<div class="main-wrapper">
  <div class="search-header-container">
    <h1 class="search-header">Find a Plant Helper</h1>
  </div>

  <%= simple_form_for :search, :url => "/profiles", method: "get" do |f| %>
    <div class="search-by-address">
      <p class="form-label">Where are your plants?</p>
      <%= text_field_tag :address, "", id: "address_input", placeholder: "Type in your address..." %>
    </div>  
    <p class="form-label">When will you need help with your plants?</p>
    <div class="search-form-container">
      <%= f.input :from, as: :string, required: true, input_html: {class: "datepicker", id: "range_start"} %>
      <%= f.input :to, as: :string, required: true, input_html: {class: "datepicker", id: "range_end"} %>
    </div>
    <%= f.button :submit, "Find available Plant Sitters", class: "btn-sea-green search-sitter-button" %>
  <% end %>
</div>
