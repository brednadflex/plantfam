<div class="container">
  <h4 class="search-headline">Search for a Plantsitter</h4>

  <%= form_tag profiles_path, method: :get do %>
    <%= label_tag "Your address" %>
    <%= text_field_tag :address, "", id: "address_input", placeholder: "Where are your plants?" %>
    <div class="search-field-container">
      <%= label_tag :from %>
      <%= date_field_tag :from %>
      <%= label_tag :to %>
      <%= date_field_tag :to %>
    </div>
    <%= submit_tag "Search", class: "btn btn-primary search-button" %>
  <% end %>
</div>
