<div class="container">
  <img class="banner" src=<%= 'https://source.unsplash.com/random/900Ã—250/?plants' %> alt="plant">
  <img src=<%= @profile.profile_img %> alt="user-image" class="rounded-circle profile-avatar";>
  
  
  <div class="name-experience-offers-rating">
    <div class="name-rating">
      <p class="name"><%= @profile.first_name %> <%= @profile.last_name %></p>
      <p class="rating-leaf"><i class="fas fa-leaf"></i><i class="fas fa-leaf"></i><i class="fas fa-leaf"></i><i class="fas fa-leaf"></i><i class="fas fa-leaf"></i></p>
    </div>
    <div class="experience">
      <p><em><%= @profile.experience %></em></p>
    </div>
    <div class="sitter-advisor">
      <p>Offers: </p>
      <% if @profile.sitter %>
        <p class="tag-sitter">sitter</p>
      <% end %>
      <%if @profile.advisor %>
        <p class="tag-advisor">advisor</p>
      <% end %>
    </div>
  </div>
  

  <%= link_to chat_room_path do %>
    <div class="message-button-flex button-profile-message">
      <%= image_tag("mail-white.png") %>
      <p class="button-text ml-3">message <%= @profile.first_name %></p>
    </div>
  
  <% end %>

  <div class="description-about-me">
    <p><strong>About <%= @profile.first_name %>:</strong></p> 
    <p><%= @profile.description %></p>
  </div>
<p class="ml-2" style="font-size:18px"><strong>Services:</strong></p>
<div class="services">
  <div class="service-sitter">
    <div>
      <p>Advice</p>
      <p class="service-info-line">help with plant care problems</p>
    </div>
    <div class="service-price">
      <div>
        <p class="mr-3">swap</p>
      </div>
      <div>
        <%= link_to new_profile_booking_path(@profile) do %>
          <i class="fas fa-chevron-right"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="service-advisor">
    <div>
      <p>Plant Sitting</p>
      <p class="service-info-line">personalized care schedule</p>
    </div>
    <div class="service-price">
      <div>
        <p class="mr-3">donation</p>
      </div>
      <div>
        <%= link_to new_profile_booking_path(@profile) do %>
          <i class="fas fa-chevron-right"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>

<p class="ml-2" style="font-size:18px"><strong>Reviews:</strong></p>
<div class="review-container">
    <% @reviews.each do |review| %>
      <div class="review">
        <div class="review-avatar">
          <%= link_to profile_path(review) do %>
            <img src=<%= review.user.profile.profile_img %>   alt="user-image" class="rounded-circle review-avatar">
          <% end %>
        </div>
        <div class="review-info">
          <div class="review-content">
            <%= review.content %>
          </div>
          <div class="review-date-time-rating">
            <%= review.created_at.strftime("%b %d, %Y") %>
            <p class="rating-leaf"><i class="fas fa-leaf"></i><i class="fas fa-leaf"></i><i class="fas fa-leaf"></i><i class="fas fa-leaf"></i><i class="fas fa-leaf"></i></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
<div class="actions">
  <div>
    <%= link_to 'edit profile', edit_profile_path(@profile), class: "btn-sea-green" %>
  </div>
  <div>
    <% params[:search] = @search %>
    <%= link_to 'book me!', new_profile_booking_path(@profile, search: @search.to_s), class: "btn-sea-green" %>
  </div>
  <div>
    <%= link_to 'My Bookings', profile_bookings_path(current_user.profile.id), class: "btn-sea-green" %>
  </div>
  <div>
    <%= link_to 'Booking Requests', booking_requests_path, class: "btn-sea-green" %>
  </div>
  <div>
    <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: "btn-sea-green" %>
  </div>
</div>
