<div class="profile-edit-scrollbox">
  <div class="container">
    <img class="banner" src=<%= 'https://source.unsplash.com/random/900Ã—250/?plants' %> alt="plant">
    <img src=<%= @profile.profile_img %> alt="user-image" class="rounded-circle profile-avatar";>
        <div class="name-experience-offers-rating">
      <div class="name-rating">
        <p class="name"><%= @profile.first_name %> <%= @profile.last_name %></p>
      </div>
      <div class="d-flex pt-2 rating-leaf">
        <% @profile.avg_rating.round.times do %>
          <i class="fas fa-leaf green-leaf"></i>
        <% end %>
        <% (5 - @profile.avg_rating.round).times do %>
          <i class="fas fa-leaf grey-leaf"></i>
        <% end %>
      </div>
      </div>
      <div class="experience">
        <p><em><%= @profile.experience %></em></p>
      </div>
      <div class="sitter-advisor">
        <% if @profile.sitter %>
          <p class="tag-service">sitter</p>
        <% end %>
        <%if @profile.advisor %>
          <p class="tag-service">advisor</p>
        <% end %>
      </div>
    </div>

    <%= link_to chat_room_path do %>
    <div class="button-text">
      <i class="far fa-comments button-text"></i>
      <span class="button-text profile-button-large">chat with <%= @profile.first_name %></span>
      </div>
    <% end %>
    <div class="description-about-me">
      <p><strong>About <%= @profile.first_name %>:</strong></p>
      <p><%= @profile.description %></p>
    </div>
  <p class="ml-2" style="font-size:18px"><strong>Book a Service:</strong></p>

  <div class="services">
    <div class="service-sitter">
      <div>
        <i class="fas fa-tint"></i>
      </div>
      <div class="service-price-button">
        <div class="service-price">
          <p style="color:black;"><strong>Plant Sitter</strong></p>
          <p class="service-info-line"><%= @profile.sitter_price %></p>
        </div>
        <div class="profile-service-button-book">
          <%= link_to new_profile_booking_path(@profile) do %>
            <p class="profile-button-small">book</p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="service-advisor">
      <div>
        <i class="fas fa-user-graduate"></i>
      </div>
      <div class="service-price-button">
        <div class="service-price">
          <p style="color:black;"><strong>Plant Advisor</strong></p>
          <p class="service-info-line"><%= @profile.advisor_price %></p>
        </div>
        <div class="profile-service-button-book">
          <%= link_to new_profile_booking_path(@profile) do %>
            <p class="profile-button-small">book</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <p class="ml-2" style="font-size:18px"><strong>Reviews:</strong></p>
  <div class="review-container">
      <% @reviews.each do |review| %>
        <div class="review">
          <div class="review-avatar">
            <%= link_to profile_path(review) do %>
              <img src=<%= review.user.profile.profile_img %>   alt="user-image" class="rounded-circle review-avatar">
            <% end %>
          </div>
          <div class="review-info">
            <div class="review-content">
              <%= review.content %>
            </div>
            <div class="review-date-time-rating">
              <%= review.created_at.strftime("%b %d, %Y") %>
              <p class="rating-leaf"><i class="fas fa-leaf"></i><i class="fas fa-leaf"></i><i class="fas fa-leaf"></i><i class="fas fa-leaf"></i><i class="fas fa-leaf"></i></p>
            </div>
          </div>
        </div>
      <% end %>
      </div>
  </div>

<div class="actions">
  <div>

    <%= link_to 'book me!', new_profile_booking_path(@profile), class: "btn-sea-green" %>
  </div>
</div>

