<h1>Profile</h1>

<div class="container">
  <div class="profile-info">
    <%# @profile.banner_img %>
    <img class="banner" src=<%= 'https://source.unsplash.com/random/900Ã—250/?plants' %> alt="plant">
    <img src=<%= @profile.profile_img %> alt="user-image" class="rounded-circle border mb-3" style="width: 50px; height: 50px;">
    <p><%= @profile.first_name %> <%= @profile.last_name %></p>
    <p>About me: <%= @profile.description %></p>
    <p>Experience: <%= @profile.experience %></p>
    <p>Rating: <%= @profile.avg_rating %></p>
    <p>Address: <%= @profile.address %></p>
    <p>Maximum kilometers from home: <%= @profile.max_radius %></p>
    <p>Sitter Status: <%= @profile.sitter %></p>
    <p>Advisor Status: <%= @profile.advisor %></p>
    <p>Public Profile: <%= @profile.public %></p>
  </div>
  <%= link_to 'edit profile', edit_profile_path(@profile) %>
  <%= link_to 'book me!', new_profile_booking_path(@profile) %>
  <%= link_to 'My Bookings', profile_bookings_path(current_user.profile.id) %>
  <%= link_to 'Service requests', booking_requests_path %>
  <%= link_to 'Log out', destroy_user_session_path, method: :delete %>
</div>

<% @reviews.each do |review| %>
  <img src=<%= review.user.profile.profile_img %> alt="user-image" class="rounded-circle border mb-3" style="width: 50px; height: 50px;">
  <%= review.user.profile.first_name %>
  <%= review.user.profile.last_name %>
  <%= review.content %>
  <%= review.recommended %>
  <%= review.rating %>
  <%= review.created_at.strftime("%b %d, %Y") %>
<% end %>